{
  "name": "lark-message-hub",
  "version": "0.2.0",
  "description": "Multi-channel communication platform with Lark integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "dev": "ts-node e2e/local-server.ts",
    "meta-bridge": "ts-node src/servers/meta-lark-bridge.ts",
    "meta-bridge:dev": "ts-node-dev --respawn src/servers/meta-lark-bridge.ts",
    "deploy:staging": "sam deploy --config-env staging",
    "deploy:prod": "sam deploy --config-env production"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@larksuiteoapi/node-sdk": "^1.28.0",
    "axios": "^1.6.0",
    "express": "^5.2.1",
    "imap-simple": "^5.1.0",
    "mailparser": "^3.9.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/aws-lambda": "^8.10.125",
    "@types/express": "^5.0.6",
    "@types/imap-simple": "^4.2.10",
    "@types/jest": "^30.0.0",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^7.0.4",
    "@types/uuid": "^9.0.6",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemailer": "^7.0.11",
    "playwright": "^1.57.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
